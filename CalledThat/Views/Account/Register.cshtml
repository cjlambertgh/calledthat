
@{
    ViewBag.Title = "Register";
    Layout = null;
}
@model CalledThat.ViewModels.Account.RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/styles")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Enter your details below</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class="control-label"})
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autofocus = true, type = "email", placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.PasswordFor(m => m.Password, new { @class="form-control", placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = true, type = "text", placeholder = "Name" })
                                    @Html.ValidationMessageFor(m => m.Name, null, new { @class="text-danger"})
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.EmailAlerts, new { @class = "control-label" })
                                    @Html.CheckBoxFor(m => m.EmailAlerts, new { @class = "toggle", @checked="checked" })
                                    <p class="text-muted">Receive reminder emails when gameweeks open/close. This can be turned on/off in account settings.</p>
                                    @Html.ValidationMessageFor(m => m.EmailAlerts, null, new { @class = "text-danger" })
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Register"/>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*@Scripts.Render("~/bundles/main")*@

    @*<!-- jQuery -->
        <script src="~Scripts/startmin-javascript/jquery.min.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="~Scripts/startmin-javascript/bootstrap.min.js"></script>

        <!-- Metis Menu Plugin JavaScript -->
        <script src="~Scripts/startmin-javascript/metisMenu.min.js"></script>

        <!-- Custom Theme JavaScript -->
        <script src="~Scripts/startmin-javascript/startmin.js"></script>*@

</body>
</html>




