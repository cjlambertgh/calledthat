@model CalledThat.ViewModels.Game.ResultsViewModel

<h2>Points @Model.PlayerResults.Sum(res => res.Points) </h2>
<div class="table content2">
    <table class="table">
        <thead>
            <tr>
                <th>Home</th>
                <th>Score</th>
                <th>(Prediction)</th>
                <th>Away</th>
                <th>Double</th>
                <th>Banker</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PlayerResults)
            {
                <tr>
                    <td>@item.HomeTeam</td>
                    <td>@item.HomeScore - @item.AwayScore </td>
                    <td>@item.HomeScorePick - @item.AwayScorePick</td>
                    <td>@item.AwayTeam</td>
                    <td>
                        @if (item.Double)
                        {
                            <div class="text-center">
                                <i class="fa fa-fw" aria-hidden="true" title="Copy to use check">&#xf00c</i>
                            </div>
                        }
                    </td>
                    <td>@if (item.Banker)
                        {
                            <div class="text-center">
                                <i class="fa fa-fw" aria-hidden="true" title="Copy to use check">&#xf00c</i>
                            </div>
                        }
                    </td>
                    <td>@item.Points</td>
                </tr>
            }
        </tbody>
    </table>
</div>

