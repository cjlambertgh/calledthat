
@{
    ViewBag.Title = "View League";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CalledThat.ViewModels.League.ViewSingleLeagueViewModel

<div class="col-lg-12">
    <h1 class="page-header">@Model.LeagueName</h1>
    <p class="text-muted">Join a private league by entering the invite code below</p>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">My leagues</div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>League Name</th>
                            <th>Competition</th>
                            <th>Owner</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LeagueTableRows.OrderBy(item => item.LeaguePosition))
                        {
                            <tr>
                                <td>@item.LeaguePosition</td>
                                <td>@item.PlayerName</td>
                                <td>@item.GameweekPoints </td>
                                <td>@item.TotalPoints</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>