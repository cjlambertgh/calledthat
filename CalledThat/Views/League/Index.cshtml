
@{
    ViewBag.Title = "Leagues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CalledThat.ViewModels.League.ViewLeaguesViewModel


<div class="col-lg-12">
    <h1 class="page-header">Leagues</h1>
    @Html.Partial("AdsenseBar")
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">My leagues</div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>League Name</th>
                            <th>Competition</th>
                            <th>Players</th>
                            <th>Owner</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LeagueItems.OrderBy(l => l.LeagueName))
                        {
                        <tr class="get-action" data-url="@Url.Action("View", "League", new { item.LeagueId })">
                            @if (item.LeagueOwner)
                            {
                            <td>
                                @item.LeagueName
                                &nbsp;
                                <a href='@Url.Action("Manage", "League", new { leagueId=item.LeagueId })'>
                                    <span data-toggle="tooltip" title="Manage"><i class="glyphicon glyphicon-cog"></i></span>
                                </a>
                            </td>
                            }
                            else
                            {
                                <td>@item.LeagueName</td>
                            }
                            <td>@item.Competition</td>
                            <td>@item.NumberOfPlayers</td>
                            <td>@(item.LeagueOwner ? "Yes" : "No")</td>
                        </tr>
                        }                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>