
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formControlClass = new { @class = "form-control" };
}

@model CalledThat.ViewModels.League.CreateLeagueViewModel

<div class="col-lg-12">
    <h1 class="page-header">Create League</h1>
    <p class="text-muted">Create your own private league and invite friends</p>
</div>

<div class="panel pabel-default">
    <div class="panel-heading">League details</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(m => m.LeagueName)
                @Html.TextBoxFor(m => m.LeagueName, formControlClass)
                @Html.ValidationMessageFor(m => m.LeagueName, null, new { @class = "help-block" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedCompetitionId)
                @Html.DropDownListFor(m => m.SelectedCompetitionId, new SelectList(Model.Competitions, "Key", "Value"), formControlClass)
                @Html.ValidationMessageFor(m => m.SelectedCompetitionId, null, new { @class = "help-block" })
            </div>
        }
    </div>

</div>