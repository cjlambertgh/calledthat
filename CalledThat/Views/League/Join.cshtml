
@{
    ViewBag.Title = "Join League";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CalledThat.ViewModels.League.JoinLeagueViewModel

<div class="col-lg-12">
    <h1 class="page-header">Join League</h1>
    
    <p class="text-muted">Join a private league by entering the invite code below</p>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">League details</div>
            <div class="panel-body">
                @using (Html.BeginForm("Join", "League", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.LeagueCode)
                        @Html.TextBoxFor(m => m.LeagueCode, new { @class="form-control"})
                        @Html.ValidationMessageFor(m => m.LeagueCode, null, new { @class="text-danger"})
                    </div>
                    if(Model != null && !string.IsNullOrEmpty(Model.LeagueName))
                    {
                    <div class="form-group">
                        <span>Click Join League to join: <strong>@Model.LeagueName</strong></span>
                    </div>
                    }
                    <input type="submit" value="Join League" class="btn btn-primary" />
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    @Html.Partial("AdsenseBar")
</div>

